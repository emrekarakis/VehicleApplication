@model Vehicle
@{

    ViewData["Title"] = "Add";
}

<h2 class="text-center"> Add Vehicle</h2>

<br/>
<div class="container">
    
    <form asp-controller="Record" asp-action="Add" method="post">

        <div class="form-group">
            <label for="Plate">Plate</label>
            <input type="text" asp-for="Plate" class="form-control"/>

        </div>

        <div class="form-group">
            <label for="NickName">NickName</label>
            <input type="text" asp-for="NickName" class="form-control"/>

        </div>

        <div class="form-group">
            <label for="Brand">Brand</label>
            <input type="text" asp-for="Brand" class="form-control"/>

        </div>

        <div class="form-group">
            <label for="Model">Model</label>
            <input type="text" asp-for="Model" class="form-control"/>

        </div>

        <div class="form-group">
            <label for="ModelYear">ModelYear</label>
            <input type="text" asp-for="ModelYear" class="form-control"/>

        </div>

        <div class="form-group">
            <label for="Color">Color</label>
            <input type="text" asp-for="Color" class="form-control"/>

        </div>

        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="IsActive" asp-for="IsActive">
            <label class="form-check-label" for="Active">
                IsActive
            </label>
        </div>
        
        
        <div class="form-group">
            <label asp-for="Type">Vehicle Types :</label>
            <select asp-for="Type" class="form-control">

                <option value="">Select an option</option>
                <option value="1">Otomobil</option>
                <option value="2">Kamyonet</option>
                <option value="3">Kamyon</option>
                <option value="4">Otobüs</option>
                <option value="5">Motosiklet</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="Category">Category:</label>
            <select asp-for="Category" class="form-control" asp-items="@ViewBag.Categories">

                <option selected disabled value="">Select an option</option>
                <option value="1">Spor Arabalar</option>
                <option value="2">Normal Vasıta</option>
                <option value="3">Motorlu Vasıta</option>
                <option value="4">Yolcu Taşıyan Vasıta</option>
                <option value="5">Yük Taşıyan Vasıta</option>
            </select>
        </div>
        <input type="submit" value="Submit" asp-action="Add" asp-controller="Record" class="btn btn-primary"/>



    </form>

</div>