@model IEnumerable<Category>

<div class="list-group">
    <a href="/Vehicle/List" class="list-group-item list-group-item-action">
        All Vehicles
    </a>
    @foreach (var category in Model)
    {
        
        <a asp-controller="Vehicle"
           asp-action="List"
           asp-route-id="@category.Id"
           class="list-group-item list-group-item-action @(ViewBag.SelectedCategory == category.Id.ToString() ? "active" : "")">
            @category.Name
        </a>
        
    }
   
  
</div>
